<table>
    <thead>
        <tr>
            <th>Ticket Number</th>
            <th>Flight Name</th>
            <th>Departure</th>
            <th>Passenger Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr th:each="ticket : ${tickets}">
            <td th:text="${ticket.ticketNo}"></td>
            <td th:text="${ticket.flightName}"></td>
            <td th:text="${ticket.departure}"></td>
            <td th:text="${ticket.passengerName}"></td>
            <td>
                <button onclick="confirmCancelTicket([[${ticket.ticketNo}]])">Cancel</button>
            </td>
        </tr>
    </tbody>
</table>

<script>
function confirmCancelTicket(ticketNo) {
    if (confirm("Are you sure you want to cancel this ticket?")) {
        window.location.href = "/cancel-ticket/" + ticketNo;
    }
}
</script>
